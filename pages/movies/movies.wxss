/* pages/movies/movies.wxss */
@import "./movie-list/movielistTemplate";
@import "./movie-grid/movie-grid.wxss";
.container {
  background-color: #f2f2f2;
}
.search {
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  background-color: #f2f2f2;
}
.search input {
  height: 100%;
  width: 600rpx;
  font-size: 28rpx;
  margin-left: 20px;
}
.icon {
  margin: auto 0 auto 20rpx;
}
.placeholder {
  font-size: 14px;
  color: #d1d1d1;
  margin-left: 20rpx;
}
.movie-template {
  margin-bottom: 30rpx;
}
.search-more {
  position: absolute;
  margin-top: 80rpx;
}
.out {
  width: 30rpx;
  height: 30rpx;
  margin: auto 0 auto 0;
}
